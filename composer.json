{
    "name": "kaga/psr-framework",
    "type": "project",
    "license": "BSD-3-Clause",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Framework\\": "src/Framework/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\App\\": "tests/App/",
            "Tests\\Framework\\": "tests/Framework/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.62",
        "phpunit/phpunit": "^11.3"
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
